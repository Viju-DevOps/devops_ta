{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Sanctions List",
    "description": "User Sanction Validation Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
    "paths": {
      "/user/validate": {
        "get": {
          "tags": ["Validate User"],
          "summary": "Check whether the user is valid or not",
          "parameters": [
            {
              "name": "email",
              "in": "query",
              "required": false,
              "description": "User email",
              "type": "string"
            },
            {
              "name": "nationality",
              "in": "query",
              "required": false,
              "description": "User nationality",
              "type": "string"
            },
            {
              "name": "passport_no",
              "in": "query",
              "required": false,
              "description": "User passport number",
              "type": "string"
            },
            {
              "name": "drivers_license_no",
              "in": "query",
              "required": false,
              "description": "User drivers license number",
              "type": "string"
            },
            {
              "name": "name",
              "in": "query",
              "required": false,
              "description": "User name or alias name",
              "type": "string"
            },
            {
              "name": "gender",
              "in": "query",
              "required": false,
              "description": "User gender",
              "type": "string"
            },
            {
              "name": "dob",
              "in": "query",
              "required": false,
              "description": "User date of birth",
              "type": "string"
            },
            {
              "name": "pob",
              "in": "query",
              "required": false,
              "description": "User place of birth",
              "type": "string"
            },
            {
              "name": "address",
              "in": "query",
              "required": false,
              "description": "User address",
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/userValidation"
              }
            }
          }
        }
      }
    },
    "definitions": {
      "userValidation": {
        "properties": {
          "message": {
            "type": "string"
          },
          "validationResult": {
            "type": "integer"
          }
        }
      }
    }
}
